<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/background_cats_fullscreen"
            android:orientation="vertical"
            android:layout_weight="0.24"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/inter_bold"
                android:background="@drawable/background_cats_full_screen"
                android:textColor="@color/white"
                android:text="Genre"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/containerCatsWithoutBackground"
                layout="@layout/container_cats_without_background"/>


        </LinearLayout>

        <View
            android:layout_weight="0.02"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:background="@drawable/background_cats_fullscreen"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/inter_bold"
                android:background="@drawable/background_channels2_full_screen"
                android:textColor="@color/white"
                android:text="Channels"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/commonCatsArrowUp"
                    android:background="@drawable/categories_arrows_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/container_arrows_height">

                    <ImageView
                        android:id="@+id/arrowUpCategories"
                        android:src="@drawable/arrow_up"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/width_arrows_channels"
                        android:layout_height="@dimen/height_arrows_channels"/>

                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/rvChannelsDefault"
                    android:layout_marginBottom="@dimen/common_categories_rv_margin_vertical"
                    android:layout_marginTop="@dimen/common_categories_rv_margin_vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <FrameLayout
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/commonCatsArrowDown"
                    android:background="@drawable/categories_arrows_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/container_arrows_height">

                    <ImageView
                        android:id="@+id/arrowDownCategories"
                        android:src="@drawable/arrow_down"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/width_arrows_channels"
                        android:layout_height="@dimen/height_arrows_channels"/>

                </FrameLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_weight="0.50"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

    </LinearLayout>

</FrameLayout>