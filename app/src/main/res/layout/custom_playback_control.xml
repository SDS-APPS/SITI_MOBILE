<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:fitsSystemWindows="true"
    android:weightSum="1"
    app:cardBackgroundColor="@android:color/transparent">
    <LinearLayout
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_controller"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:weightSum="3">

            <LinearLayout
                android:visibility="gone"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tvResolution"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    tools:text="1080x720"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:text="UHD"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="12sp"
                    android:id="@+id/ivResolution"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:nextFocusUp="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">


                <FrameLayout
                    android:focusable="true"
                    android:background="@drawable/icon_controller_selectable"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:id="@id/exo_rew"
                        android:src="@drawable/back_controller" />

                </FrameLayout>

                <ImageButton
                    android:id="@id/exo_play"
                    style="@style/ExoMediaButton.Play" />

                <ImageButton
                    android:id="@id/exo_pause"
                    style="@style/ExoMediaButton.Pause" />

                <FrameLayout
                    android:focusable="true"
                    android:background="@drawable/icon_controller_selectable"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@id/exo_ffwd"
                        android:src="@drawable/next_controller"/>


                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:nextFocusUp="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:visibility="gone"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvOk3SecForLive"
                        android:textStyle="bold"
                        android:layout_weight="0.05"
                        android:textColor="@color/white"
                        android:text="HOLD OK 3 SEC FOR LIVE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/aspect_ratio"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:src="@drawable/livetvfullscreen_controller_button_ratio"
                        app:layout_constraintEnd_toStartOf="@+id/exo_cc"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/exo_cc"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        app:layout_constraintEnd_toStartOf="@+id/exo_v_tracks"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/aspect_ratio"
                        android:src="@drawable/ic_exo_cc" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/exo_v_tracks"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        app:layout_constraintEnd_toStartOf="@+id/exo_a_tracks"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/exo_cc"
                        android:src="@drawable/ic_exo_video_track" />

                    <ImageView
                        android:id="@+id/exo_a_tracks"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        app:layout_constraintEnd_toStartOf="@+id/aspect_ratio"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/exo_v_tracks"
                        android:src="@drawable/litvfullscreen_controller_button_audio" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        app:layout_constraintEnd_toStartOf="@+id/aspect_ratio"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/exo_a_tracks"
                        android:src="@drawable/ic_info_normal" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        app:layout_constraintEnd_toStartOf="@+id/aspect_ratio"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/exo_a_tracks"
                        android:src="@drawable/ic_record_program" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@drawable/background_progress_exo"
            android:layout_marginStart="@dimen/margin_start_and_end_controller_progress_exo"
            android:layout_marginEnd="@dimen/margin_start_and_end_controller_progress_exo"
            android:focusable="true"
            android:id="@+id/containerPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold" />

            <androidx.media3.ui.DefaultTimeBar
                android:id="@+id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>


            <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#FFBEBEBE"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"/>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>