<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/categories_rectangle_background"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <FrameLayout
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/categories_arrows_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_arrows_height">

            <ImageView
                android:src="@drawable/arrow_up"
                android:layout_gravity="center"
                android:layout_width="@dimen/width_arrows_channels"
                android:layout_height="@dimen/height_arrows_channels"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCatsDefault"
            android:layout_marginBottom="@dimen/common_categories_rv_margin_vertical"
            android:layout_marginTop="@dimen/common_categories_rv_margin_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <FrameLayout
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/categories_arrows_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_arrows_height">

            <ImageView
                android:src="@drawable/arrow_down"
                android:layout_gravity="center"
                android:layout_width="@dimen/width_arrows_channels"
                android:layout_height="@dimen/height_arrows_channels"/>

        </FrameLayout>

</LinearLayout>