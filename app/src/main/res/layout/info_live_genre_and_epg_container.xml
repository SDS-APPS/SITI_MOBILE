<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/background_info_live_genre_epg"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:weightSum="3"
    android:layout_height="50dp">

    <TextView
        android:alpha="0.5"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/use_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/containerGenre"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <FrameLayout
                android:background="@drawable/rectangle_genre_info_live"
                android:layout_width="40dp"
                android:layout_height="23dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_left_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <TextView
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/inter_regular"
                android:text="Genre"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:id="@+id/containerEpg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <FrameLayout
                android:background="@drawable/rectangle_epg_info_live"
                android:layout_width="40dp"
                android:layout_height="23dp">
                <TextView
                    android:textColor="@color/black"
                    android:text="ok hold"
                    android:textSize="10sp"
                    android:fontFamily="@font/inter_black"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <TextView
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/inter_regular"
                android:text="Catchup"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:id="@+id/containerCatchup"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <FrameLayout
                android:background="@drawable/rectangle_catchup_info_live"
                android:layout_width="40dp"
                android:layout_height="23dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_right_epg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <TextView
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/inter_regular"
                android:text="Epg"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>