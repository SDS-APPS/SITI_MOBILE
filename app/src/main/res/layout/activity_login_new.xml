    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topCLT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/common_top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/logo_top_left" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="@dimen/base_background_width_date"
            android:layout_height="@dimen/height_header_horizontal_linear_layout"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/base_background_calendar_width"
                android:layout_height="@dimen/base_background_calendar_height"
                android:src="@drawable/calendar_icon" />

            <TextView
                android:id="@+id/tvCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/base_background_text_size_date"
                tools:text="08/09/2023" />

            <ImageView
                android:layout_width="@dimen/base_background_clock_width"
                android:layout_height="@dimen/base_background_clock_height"
                android:layout_marginStart="4dp"
                android:src="@drawable/clock_icon" />

            <TextView
                android:id="@+id/tvCurrentHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/inter_bold"
                android:format12Hour="hh:mm"
                android:format24Hour="hh:mm"
                android:textColor="@color/white"
                android:textSize="@dimen/base_background_text_size_date"
                tools:text="5:17" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/icon_settings_selectable"
                android:focusable="false"
                android:src="@drawable/exo_ic_settings"
                android:visibility="gone"
                app:tint="#FF7700" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomLYT"
        app:layout_constraintTop_toBottomOf="@+id/topCLT">

        <include layout="@layout/activity_login_content" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomLYT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/base_footer_default"
        android:gravity="center|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/inter_bold"
            android:text="Powered by SITI-TV"
            android:textColor="@color/white"
            android:textSize="@dimen/default_background_powered_text_size" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>