<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/default_background"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:background="@drawable/common_top_bar">

        <FrameLayout
            android:layout_width="@dimen/base_width_textapp_background"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/logo_top_left" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="@dimen/base_background_width_date"
            android:layout_height="@dimen/height_header_horizontal_linear_layout"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="10dp">

            <ImageView
                android:layout_width="@dimen/base_background_calendar_width"
                android:layout_height="@dimen/base_background_calendar_height"
                android:src="@drawable/calendar_icon" />

            <TextView
                android:id="@+id/tvCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/inter_bold"
                android:format12Hour="d/MM/yyyy"
                android:format24Hour="d/MM/yyyy"
                android:textColor="@color/white"
                android:textSize="@dimen/base_background_text_size_date"
                tools:text="08/09/2023" />

            <ImageView
                android:layout_width="@dimen/base_background_clock_width"
                android:layout_height="@dimen/base_background_clock_height"
                android:layout_marginStart="4dp"
                android:src="@drawable/clock_icon" />

            <TextView
                android:id="@+id/tvCurrentHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/inter_bold"
                android:format12Hour="hh:mm"
                android:format24Hour="hh:mm"
                android:textColor="@color/white"
                android:textSize="@dimen/base_background_text_size_date"
                tools:text="5:17" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/icon_settings_selectable"
                android:focusable="false"
                android:src="@drawable/exo_ic_settings"
                android:visibility="gone"
                app:tint="#FF7700" />

        </LinearLayout>

    </FrameLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.88" />

</LinearLayout>