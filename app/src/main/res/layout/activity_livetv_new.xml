<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/contentCatsRv"
        layout="@layout/base_background_d_cats"/>

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_weight="0.17"
            android:layout_width="1dp"
            android:layout_height="0dp">

        </View>

        <FrameLayout
            android:layout_marginEnd="30dp"
            android:layout_weight="0.76"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include
                android:id="@+id/content"
                layout="@layout/activity_livetv_new_content"/>
        </FrameLayout>

        <View
            android:layout_weight="0.07"
            android:layout_width="1dp"
            android:layout_height="0dp">

        </View>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="gone"
            android:focusable="false"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_number_selected_full_screen"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="@dimen/common_margin_livetv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvNumberPressed"
            android:maxLength="3"
            android:fontFamily="@font/inter_bold"
            android:layout_width="60dp"
            android:layout_height="50dp"/>

        <TextView
            android:visibility="gone"
            android:focusable="false"
            android:fontFamily="@font/inter_bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_number_selected_full_screen"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvNumberPressed"
            android:id="@+id/tvNameChannelSelected"
            android:maxLength="10"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/activity_notification"/>

    </FrameLayout>

    <include
        android:id="@+id/contentFpLayout"
        layout="@layout/fingerprint_layout"/>

</FrameLayout>