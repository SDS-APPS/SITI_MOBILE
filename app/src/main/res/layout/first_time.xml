<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_dialog"
    android:layoutDirection="ltr"
    android:background="@drawable/background_config_dialog"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingStart="@dimen/padding_title_first_dialog"
            android:paddingEnd="@dimen/padding_title_first_dialog"
            android:textColor="@color/white"
            android:textSize="@dimen/tvSizeInfoFirstTime"
            android:text="@string/first_time_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginTop="2dp"
            app:lottie_rawRes="@raw/animation_audio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_lottie_animation_first_time"/>

        <TextView
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/tvSizeInfoFirstTime"
            android:text="@string/first_time_message_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:textSize="@dimen/tv_size_radio_button_first"
                android:textColor="@color/white"
                android:id="@+id/btnNo"
                android:layout_gravity="start"
                android:text="No"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:textSize="@dimen/tv_size_radio_button_first"
                android:layout_width="100dp"
                android:textColor="@color/white"
                android:id="@+id/btnYes"
                android:layout_gravity="end"
                android:text="Yes"
                android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>



        <TextView
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_bottom_text_select_theme_info"
            android:layout_gravity="center_horizontal"
            android:text="Select your theme"
            android:textSize="@dimen/tvSizeInfoFirstTime"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivLeanbackTheme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_image_first_time"/>

            <RadioButton
                android:textSize="@dimen/tv_size_radio_button_first"
                android:id="@+id/rbLeanback"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:text="Leanback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivOriginal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_image_first_time"/>

            <RadioButton
                android:checked="true"
                android:textSize="@dimen/tv_size_radio_button_first"
                android:id="@+id/rbOriginal"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:text="Original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        android:layout_marginEnd="8dp"
        android:padding="@dimen/padding_btn_first"
        android:textStyle="bold"
        android:textSize="@dimen/tvSizeInfoFirstTime"
        android:backgroundTint="@color/selectedColor"
        android:text="Save"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>