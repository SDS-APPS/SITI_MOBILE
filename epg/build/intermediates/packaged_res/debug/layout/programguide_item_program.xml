<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_item_epg"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/picker_item_spacing"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:parentTag="android.widget.FrameLayout">



    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/bg_program_selectable"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="@dimen/text_size_program"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/inter_semibold"
            android:id="@+id/title"
            style="@style/ProgramGuide.Text.Program.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Item title" />

        <ProgressBar
            android:id="@+id/progress"
            style="@style/ProgressBarCustomStyle"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:duplicateParentState="true"
            android:minWidth="0dp"
            android:visibility="gone"
            tools:progress="0"
            tools:visibility="visible" />

        <TextView
            android:textColor="@color/white"
            tools:text="00:00 - 01:00"
            android:textSize="@dimen/text_size_program"
            android:id="@+id/tvStartAtEndAt"
            android:fontFamily="@font/inter_semibold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</merge>