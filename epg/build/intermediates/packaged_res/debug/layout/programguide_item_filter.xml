<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="50dp"
    android:paddingStart="20dp"
    android:background="@drawable/filter_background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="2dp"
        android:layout_marginRight="6dp"
        android:contentDescription="@string/programguide_content_description_dropdown_icon"
        android:src="@drawable/programguide_icon_dropdown"
        android:tint="@color/programguide_filter_icon_color"
        tools:ignore="UseAppTint" />

    <TextView
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:fontFamily="@font/inter_semibold"
        android:id="@+id/programguide_filter_title"
        style="@style/ProgramGuide.Text.Filter"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        tools:text="Filter title" />

</FrameLayout>