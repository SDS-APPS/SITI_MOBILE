<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:paddingTop="10dp"
    android:layout_marginStart="@dimen/programguide_page_left_padding"
    android:paddingBottom="20dp"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">

    <include
        layout="@layout/programguide_item_channel"
        android:layout_width="@dimen/programguide_channel_width_image"
        android:layout_height="@dimen/programguide_channel_size_image"
        android:layout_gravity="start" />

    <!-- Focusable is set false to prevent accessibility focus being put on this layout -->
    <com.egeniq.androidtvprogramguide.row.ProgramGuideRowGridView
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="@dimen/programguide_channel_size_image"
        android:clipToPadding="false"
        android:layout_marginStart="10dp"
        tools:ignore="RtlSymmetry" />

</LinearLayout>
