<!-- The background of header_column will be programmatically changed
     in order to support rounded corners. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/programguide_channel_container"
    android:layout_width="@dimen/programguide_channel_width_image"
    android:layout_height="@dimen/programguide_channel_size_image"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/channel_epg_background">

    <TextView
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/programguide_channel_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1" />

    <ImageView
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/programguide_channel_logo"
        android:contentDescription="@string/programguide_content_description_channel_logo"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:visibility="gone"
        android:textColor="#ffffff"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
        android:id="@+id/programguide_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NPO Zappelin Xtra" />



</LinearLayout>
